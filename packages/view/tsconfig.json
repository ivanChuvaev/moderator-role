{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "rootDir": "./src",
        "composite": true,
        "jsx": "react-jsx",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "paths": {
            "@view/*": ["src/*"],
            "@model/*": ["../model/src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "references": [
        {
            "path": "../model/tsconfig.json"
        }
    ]
}
