{
  "name": "moderator-role",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace @moderator-role/view dev",
    "build": "yarn workspace @moderator-role/web-components build && yarn workspace @moderator-role/ui-footer build && yarn workspace @moderator-role/view build",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx"
  },
  "devDependencies": {
    "prettier": "2.8.8",
    "eslint": "^8.0.0",
    "eslint-plugin-import": "^2.25.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "typescript": "5.1.6",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-config-prettier": "^8.0.0"
  }
} 